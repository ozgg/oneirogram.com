<% content_for :title, t('.title', title: @container.title) %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('dreams.index.nav_text'), dreams_path) %>
  <span><%= @container.title %></span>
<% end %>

<article class="dream">
  <header>
    <h1><%= @container.title %></h1>
    <% if @container.restricted? %>
      <p class="privacy" title="<%= Dream.human_attribute_name(:privacy) %>">
        <%= enum_value('dream', 'privacy', @container.privacy) %>
      </p>
    <% end %>
  </header>
  <section class="plot">
    <div class="body"><%= raw @container.body %></div>

    <footer>
      <%= profile_link(@container.owner) %>
      <%= time_tag(@container.date) %>
    </footer>
  </section>
</article>
