<div class="authentication">
  <% if user.nil? %>
    <%= link_to(t('authentication.login.nav_text'), login_path) %>,
    <%= link_to(t('profiles.new.nav_text'), new_profile_path) %>
  <% else %>
    <%= user.slug %>
    <%= render partial: 'layouts/shared/user_nav' %>
    <%= button_to('log out', logout_path, method: :delete, turbo: { method: 'delete' }) %>
  <% end %>
</div>
